<!--Saved Articles Page-->

<div class="container">

    <div class="col-md-12 jumbotron">
        <div class="text-center">
            <h1>League of Legends</h1>
            <h1>Saved Articles</h1>
        </div>
    </div>
    <div class="row">
        {{#if article}}
        {{#each article}}
        <div class="col-md-4">
            <div class="panel panel-default" style="height:270px;">
                <div class="panel-heading">
                    <a href={{this.link}} target="_blank">
                        <h4>{{this.title}}</h4>
                    </a>
                </div>
                <div class="panel-body">
                    <a href={{this.link}} target="_blank"><img src={{this.image}}
                            style="margin-right: 10px; float:left; max-width:150px; max-height:150px;">
                        <p>{{this.summary}}</p>
                    </a>
                    <br>
                    <button style="position:absolute; left:31px; bottom:34px;" class="btn btn-warning addNote" data-toggle="modal"
                        data-target="#noteModal{{this._id}}" data-id={{this._id}}>Note</button>
                    <button style="position:absolute; left:93px; bottom:34px;" class="btn btn-danger delete" data-id={{this._id}}>Delete</button>
                </div>
            </div>
        </div>
        {{/each}}
        {{else}}
        <div class="panel panel-default">
            <div class="panel-body">
                <h4>You have no saved articles.</h4>
            </div>
        </div>
        {{/if}}
    </div>
</div>

<!--Clicked Notes Modal-->
{{#each article}}
{{> notes-modal }}
{{/each}}